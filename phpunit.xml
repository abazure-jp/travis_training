<phpunit
  bootstrap="vendor/autoload.php"
  colors="true"
  forceCoversAnnotation="false"
  verbose="true"
>

  <testsuites>
    <testsuite name="unpoko">
      <directory>./tests/</directory>
    </testsuite>
  </testsuites>

  <logging>
    <log type="coverage-clover" target="build/logs/clover.xml"/>
  </logging>

  <filter>
    <whitelist>
      <directory>./src/</directory>
    </whitelist>
  </filter>
</phpunit>
